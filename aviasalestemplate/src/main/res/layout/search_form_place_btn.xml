<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

	<LinearLayout
			android:id="@+id/lt_search_form_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

		<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<com.devspark.robototextview.widget.RobotoTextView
					android:id="@+id/tv_city"
					style="@style/search.destination.city"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

			<com.devspark.robototextview.widget.RobotoTextView
					android:id="@+id/tv_iata"
					app:robotoTypeface="roboto_regular"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:textAllCaps="true"
					android:textColor="@color/grey_455A64"
					android:textSize="18dp"/>
		</RelativeLayout>

		<com.devspark.robototextview.widget.RobotoTextView
				android:id="@+id/tv_airport"
				style="@style/search.destination.airport"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="1dp"/>

	</LinearLayout>


</RelativeLayout>
