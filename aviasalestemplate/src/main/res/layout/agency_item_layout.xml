<?xml version="1.0" encoding="utf-8"?>

<ru.aviasales.template.ui.view.AgencyItemView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white">

	<View
			android:id="@+id/top_view"
			android:layout_width="match_parent"
			android:layout_height="20dp"/>

	<android.support.v7.widget.AppCompatTextView
			android:id="@+id/tv_price"
			android:layout_width="wrap_content"
			android:layout_height="32dp"
			android:layout_below="@+id/top_view"
			android:layout_marginLeft="24dp"
			android:gravity="center_vertical"
			android:text="33 256"
			android:textColor="@color/dark_blue_455A64"
			android:textSize="15dp"/>

	<android.support.v7.widget.AppCompatTextView
			android:id="@+id/tv_agency"
			android:layout_width="wrap_content"
			android:layout_height="32dp"
			android:layout_alignBaseline="@+id/tv_price"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:layout_marginLeft="84dp"
			android:ellipsize="end"
			android:gravity="center_vertical"
			android:paddingRight="40dp"
			android:singleLine="true"
			android:text="на OZON.travel"
			android:textColor="@color/dark_blue_455A64"
			android:textSize="15dp"/>

	<ImageView
			android:id="@+id/iv_mobile_version"
			android:layout_width="wrap_content"
			android:layout_height="32dp"
			android:layout_alignParentRight="true"
			android:layout_below="@+id/top_view"
			android:layout_marginRight="10dp"
			android:src="@drawable/ic_mobile_version"/>

	<View
			android:layout_width="match_parent"
			android:layout_height="32dp"
			android:layout_below="@+id/top_view"
			android:background="@drawable/agencies_selector_item"
			android:duplicateParentState="true"/>

	<View
			android:id="@+id/bottom_view"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:layout_below="@+id/tv_price"/>

</ru.aviasales.template.ui.view.AgencyItemView>